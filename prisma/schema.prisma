generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./amyjr.db"
}

model Shitpost {
  id      Int     @id @default(autoincrement())
  name    String
  content Bytes
  userId  String?
  User    User?   @relation(fields: [userId], references: [id])
}

model User {
  id                    String     @id
  musicUsername         String?
  musicUsesListenbrainz Boolean?
  shitposts             Shitpost[]
  partners              Partner[]
}

model Partner {
  id     Int    @id @default(autoincrement())
  value  String
  userId String
  user   User   @relation(fields: [userId], references: [id])
}
