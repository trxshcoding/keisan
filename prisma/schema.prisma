generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  // TODO: look at https://www.prisma.io/docs/orm/overview/databases/sqlite#using-the-better-sqlite3-driver
  provider = "sqlite"
  url      = "file:./amyjr.db"
}

model Shitpost {
  id      Int     @id @default(autoincrement())
  name    String
  content Bytes
  User    User?   @relation(fields: [userId], references: [id])
  userId  String?
}

model User {
  id                    String     @id
  musicUsername         String?
  musicUsesListenbrainz Boolean?
  shitposts             Shitpost[]
  marriage              Marriage?

  Marriage Marriage[] @relation("Spouse")
}

model Marriage {
  id        Int    @id @default(autoincrement())
  userOneId String @unique
  userOne   User   @relation(fields: [userOneId], references: [id], onDelete: Cascade)
  userTwoId String @unique
  userTwo   User   @relation("Spouse", fields: [userTwoId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userOneId, userTwoId])
}
