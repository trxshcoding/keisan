generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./amyjr.db"
}

model Shitpost {
  id      Int     @id @default(autoincrement())
  name    String
  content Bytes
  userId  String?
  User    User?   @relation(fields: [userId], references: [id])
}

model User {
  id                    String     @id
  musicUsername         String?
  musicUsesListenbrainz Boolean?
  shitposts             Shitpost[]
}

model Marriage {
  id        Int      @id @default(autoincrement())
  userOneId String   @unique
  userTwoId String   @unique
  createdAt DateTime @default(now())

  @@unique([userOneId, userTwoId])
}
