{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "erasableSyntaxOnly": true,
        "forceConsistentCasingInFileNames": true,
        "verbatimModuleSyntax": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ]
}